namespace CalculatedTechnologiesLibrary
{
    public class NumberHelper
    {
        //Produces a random number according to user provided range.
        public int RandomNumberGenerator(int maxRange)
        {
            //Create generator
            Random rnd = new Random();

            // creates a number between 1 and maxRange
            int result = rnd.Next(1, maxRange);

            //returns random number
            return result;
        }
    }
}
